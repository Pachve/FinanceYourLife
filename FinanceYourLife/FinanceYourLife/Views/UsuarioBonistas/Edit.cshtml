@model FinanceYourLife.Models.UsuarioBonista

@{
    ViewBag.Title = "Edit Profile";
}

<center>
    <h2>Edit Profile</h2>
</center> 



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
